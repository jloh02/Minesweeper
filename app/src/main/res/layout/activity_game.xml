<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jonathan.minesweeper2.Game">

    <TextView
        android:id="@+id/time_view"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/monodigital"
        android:textSize="50dp"
        android:text="000"
        android:textColor="#FF0000"
        android:gravity="top"
        android:textAlignment="center"
        android:background="#000000"/>

    <TextView
        android:id="@+id/gameOverText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="83dp"
        android:text="@string/endGame"
        android:textSize="25dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/goHomeButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/gameOverText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="Return to Home Page"
        android:visibility="invisible" />

    <Button
        android:id="@+id/modeButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="120dp"
        android:background="@drawable/flagged" />

</RelativeLayout>
